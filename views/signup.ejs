<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign Up</title>

  <link rel="stylesheet" href="../stylesheets/signup.css" />
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
  <!-- <link
      rel="stylesheet"
      href="path/to/font-awesome/css/font-awesome.min.css"
    /> -->
</head>

<body style="background-color: #e6fbff">
  <div class="container signup-div">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card" style="border: 2px solid rgb(2, 81, 112)">
          <header class="card-header text-center" id="title">
            <h1>
              <i class="fa fa-user-plus" aria-hidden="true"></i>
              <%= title %>
            </h1>
            <h5>Register as an Employee</h5>

          </header>
          <%- include("partials/messages") %>
            <form style="padding: 40px" method="POST" action="/users/signup">
              <div class="form-row">
                <div class="col form-group">
                  <label>Username </label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                    </div>
                    <input type="username" class="form-control" name="username" id="username"
                      placeholder="Enter username" required />
                  </div>
                </div>
                <!-- form-group end.// -->
              </div>
              <!-- form-row end.// -->

              <div class="form-group">
                <label>Email address</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                  </div>
                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter e-mail address" />
                </div>
                <small class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <!-- form-group end.// -->

              <!-- gender -->
              <div class="form-group">
                <label class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" value="male" required />
                  <span class="form-check-label"> Male </span>
                </label>
                <label class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" value="female" required />
                  <span class="form-check-label"> Female</span>
                </label>
                <label class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" value="LGBTIQ+" required />
                  <span class="form-check-label"> LGBTIQ+</span>
                </label>
                <label class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" value="nothing" required />
                  <span class="form-check-label"> Prefer not to say</span>
                </label>
              </div>
              <!-- form-group end.// -->

              <!-- Skills -->
              <div class="form-group">
                <label>Skills</label>
                <div class="row">
                  <select class="form-control mb-3 col-5" style="margin-left: 10px;" id="mainskill" name="mainskill">
                    <option>Painter</option>
                    <option>Mason</option>
                    <option>Domestic Help</option>
                    <option>Plumber</option>
                    <option>Gardener</option>
                    <option>Laundary Service</option>
                  </select>
                  <input type="text" name="otherskills" id="otherskills" class="form-control col-6 py-0"
                    style="margin-left: 1vw; margin-bottom: 16px;" placeholder="Add other skills">
                </div>
                <!-- form-group end.// -->

                <!-- Government Id and Document -->
                <div class="form-group">
                  <label>Government Id</label>
                  <div class="row">
                    <select class="form-control mb-3 col-5" style="margin-left: 10px;" id="governmentid"
                      name="governmentid">
                      <option>Citizenship</option>
                      <option>License</option>
                      <option>Passport</option>
                      <option>Recommendation letter from ward</option>
                    </select>
                    <input name="documentimage" id="input-files" class="col-6" type="file">
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="preview-images"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- address -->
              <div class="form-group">
                <label>Address</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="fas fa-map-marker-alt"></i>
                    </span>
                  </div>
                  <input class="form-control" type="string" name="address" id="address" placeholder="Your Address" required/>
                </div>
              </div>
              <!-- form-group end.// -->

              <!-- phone number -->
              <div class="form-group">
                <label>Phone Number</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="fas fa-phone-volume"></i>
                    </span>
                  </div>
                  <input class="form-control" type="string" name="phonenumber" id="phonenumber"
                    placeholder="Your Phone Number" required />
                </div>
              </div>
              <!-- form-group end.// -->

              <div class="form-group">
                <label>Create password</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                  </div>
                  <input class="form-control" type="password" name="password" id="password"
                    placeholder="Enter password" />
                </div>
              </div>
              <!-- form-group end.// -->

              <div class="form-group">
                <label>Confirm password</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                  </div>
                  <input class="form-control" type="password" name="password2" id="password2"
                    placeholder="Enter password again" />
                </div>
              </div>
              <!-- form-group end.// -->

              <input type="checkbox" id="terms" name="terms" value='agree' required>
              <label for="terms">I Agree to your <a href="/termspolicy/terms">Terms</a> and <a
                  href="/termspolicy/privacypolicy">Privacy Policy</a></label>
              <!-- form-group// -->

              <div class="form-group">
                <center>
                  <button id="Submitbutton" type="submit" class="btn btn-primary btn-block">
                    Sign Up
                  </button>
                </center>
              </div>
            </form>
            <div class="border-top card-body text-center">
              Have an account?
              <a href="/users/login">Log In</a>
            </div>
        </div>
        <!-- card.// -->
      </div>
      <!-- col.//-->
    </div>
    <!-- row.//-->
  </div>
  <!--container end.//-->

  <br /><br />
</body>

</html>

